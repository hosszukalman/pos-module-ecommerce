{% liquid
  function product_models = 'modules/core/variable/get', name: 'product_models', type: 'array'
  if product_models contains params.model
    for field in extra_fields
      assign params_to_modify = params_to_modify | add_to_array: field
    endfor
  endif
  return nil
%}
